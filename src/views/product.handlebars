<p {{#compare user.rol '!==' 'user'}} disable {{/compare}}>Carrito Id: {{user.cart}}</p>    


<div class="product-conteiner">
    <div class="product">
        <p>{{product.title}}</p>
        <p>{{product.category}}</p>
        <p>{{product.code}}</p>
        <p>Precio:${{product.price}}</p>
        <p>stock:{{product.stock}}</p>
    </div>
    <button class="product-button {{#compare ../user.rol '!==' 'user'}}disable {{/compare}}" id="{{product._id}}">Agregar al carrito</button>
    <a href="/products"><button class="home-button">Home</button></a>
    <button class="cart-button" {{#compare user.rol '!==' 'user'}} disable {{/compare}} id={{user.cart}}>Ver carrito</button>
</div>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/product.js"></script>
